pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  name: kaniko
spec:
  containers:
    - name: kaniko
      image: gcr.io/kaniko-project/executor:latest
      args:
        - --dockerfile=/workspace/Dockerfile.backend
        - --context=/workspace/menu
        - --destination=vgnsh/django-backend:latest
        - --cache=true
      volumeMounts:
        - name: kaniko-secret
          mountPath: /kaniko/.docker
  volumes:
    - name: kaniko-secret
      secret:
        secretName: regcred
"""
        }
    }
    environment {
        IMAGE_NAME = 'vgnsh/django-backend'
        IMAGE_TAG = 'latest'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/vignesh-vp/valoriz-assesment.git'
            }
        }
        stage('Build and Push Docker Image with Kaniko') {
            steps {
                container('kaniko') {
                    sh '''
                    /kaniko/executor
                    '''
                }
            }
        }
        stage('Deploy to K3s') {
            steps {
                sh 'kubectl apply -f k8s/django-backend-deployment.yaml'
            }
        }
    }
}

