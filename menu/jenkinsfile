pipeline {
    agent any
    environment {
        IMAGE_NAME = 'vgnsh/django-backend'
        IMAGE_TAG = 'latest'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/vignesh-vp/valoriz-assesment.git'
            }
        }
        stage('Run Tests in Docker') {
            steps {
                sh '''
                docker run --rm -v $(pwd)/menu:/app -w /app python:3.9 bash -c "
                pip install -r requirements.txt &&
                pytest
                "
                '''
            }
        }
        stage('Build and Push Docker Image with Kaniko') {
            steps {
                sh '''
                /kaniko/executor \
                  --context `pwd`/menu \
                  --dockerfile=/workspace/Dockerfile.backend \
                  --destination $IMAGE_NAME:$IMAGE_TAG \
                  --cache=true
                '''
            }
        }
        stage('Deploy to K3s') {
            steps {
                sh 'kubectl apply -f k8s/django-backend-deployment.yaml'
            }
        }
    }
}

