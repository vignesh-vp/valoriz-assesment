pipeline {
    agent any
    environment {
        IMAGE_NAME = 'vgnsh/django-backend'
        IMAGE_TAG = 'latest'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/vignesh-vp/valoriz-assesment.git'
            }
        }
        stage('Run Tests') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                pytest
                deactivate
                '''
            }
        }
        stage('Build and Push Docker Image with Kaniko') {
            steps {
                sh '''
                /kaniko/executor \
                  --context=/workspace \
                  --dockerfile=/workspace/Dockerfile.backend \
                  --destination=$IMAGE_NAME:$IMAGE_TAG \
                  --cache=true
                '''
            }
        }
        stage('Deploy to K3s') {
            steps {
                sh 'kubectl apply -f /workspace/k8s/django-backend-deployment.yaml'
            }
        }
    }
}

