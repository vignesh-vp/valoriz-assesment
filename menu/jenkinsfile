pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/vignesh-vp/valoriz-assesment.git'
            }
        }

        stage('Install Docker') {
            steps {
                script {
                    sh '''
                    if ! command -v docker &> /dev/null; then
                        echo "Installing Docker..."
                        apt-get update
                        apt-get install -y docker.io
                    else
                        echo "Docker is already installed."
                    fi
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker --version'
                    sh 'docker build -t vgnsh/django-backend:latest -f Dockerfile.backend .'
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    sh 'echo "Vignesh@5547" | docker login -u vgnsh --password-stdin'
                }
            }
        }

        stage('Push Image') {
            steps {
                sh 'docker push vgnsh/django-backend:latest'
            }
        }

        stage('Deploy to K3s') {
            steps {
                sh 'kubectl apply -f k8s/django-backend-deployment.yaml'
            }
        }
    }
}
